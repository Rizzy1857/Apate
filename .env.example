# Apate Honeypot Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://apate_user:apate_password@localhost:5432/apate_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=apate_db
DATABASE_USER=apate_user
DATABASE_PASSWORD=apate_password

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# FastAPI Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_WORKERS=1
SECRET_KEY=your-secret-key-here-change-in-production

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_BURST=10

# Honeypot Configuration
SSH_PORT=2222
HTTP_PORT=8080
HONEYTOKEN_EXPIRE_HOURS=24

# AI Engine Configuration (Optional)
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
AI_MODEL=gpt-3.5-turbo
AI_ENABLED=false

# Monitoring Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# Development Settings
DEBUG=true
TESTING=false
DEVELOPMENT=true